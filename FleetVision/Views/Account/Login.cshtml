@using FleetVision.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box position-relative">
        <!-- Close Button (X) -->
        <a asp-controller="Home" asp-action="Home" class="close-btn">&times;</a>

        <a href="#" class="navbar-brand">Fleet<span class="text-primary">Vision</span></a>

        <form asp-controller="Account" asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="float-end">
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none">
                    Forgot your password?
                </a>
            </div>
            <div class="form-check mb-3">
                <label class="form-check-label">
                    <input asp-for="RememberMe" class="form-check-input" />
                </label>
                @Html.DisplayNameFor(a => a.RememberMe)
            </div>

            <input type="submit" value="Login" class="btn btn-success w-100 p-2" />
            <p class="text-center mt-2">Do you have an account? <a asp-controller="Account" asp-action="Register" class="text-decoration-none">Register</a></p>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- Only Added This CSS for "X" Button -->
<style>
    /* Close Button (X) */
    .close-btn {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 24px;
        font-weight: bold;
        color: #333;
        text-decoration: none;
        transition: 0.3s;
    }

        .close-btn:hover {
            color: red;
        }
</style>
