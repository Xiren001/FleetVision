@page
@model ShowRecoveryCodesModel
@{
    ViewData["Title"] = "Recovery codes";
    ViewData["ActivePage"] = "TwoFactorAuthentication";
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>


<div class="parent">
    <div class="div1">
        <div class="container-fluid px-4">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">

                    <!-- Warning Alert -->
                    <div class="alert alert-warning d-flex align-items-center shadow-sm rounded-3">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <div>
                            <p class="mb-1 fw-bold">Put these codes in a safe place.</p>
                            <p class="mb-0">If you lose your device and don't have the recovery codes, you will lose access to your account.</p>
                        </div>
                    </div>

                    <!-- Recovery Codes Display -->
                    <div class="card border-0 shadow-sm p-4 rounded-3">
                        <h5 class="text-center fw-semibold mb-3">Your Recovery Codes</h5>
                        <div class="text-center">
                            @for (var row = 0; row < Model.RecoveryCodes.Length; row += 2)
                            {
                                <div class="d-flex justify-content-center mb-2">
                                    <code class="recovery-code px-3 py-2 border rounded-2 bg-light me-2">@Model.RecoveryCodes[row]</code>
                                    <code class="recovery-code px-3 py-2 border rounded-2 bg-light">@Model.RecoveryCodes[row + 1]</code>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="div2"><partial name="_ManageNav" /></div>
</div>
