@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />



<div class="parent">
    <div class="div1">
        <div class="container-fluid px-4">
            <div class="row justify-content-center">
                <div class="col-12">

                    <!-- Content Wrapper -->
                    <div class="card border-0 shadow-sm p-4 rounded-3">

                        <h4 class="fw-bold mb-3">Change Password</h4>

                        <form id="change-password-form" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <!-- Old Password -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.OldPassword" class="form-control shadow-sm rounded-3" autocomplete="current-password"
                                       aria-required="true" placeholder="Enter your old password" />
                                <label asp-for="Input.OldPassword" class="form-label"></label>
                                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                            </div>

                            <!-- New Password -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.NewPassword" class="form-control shadow-sm rounded-3" autocomplete="new-password"
                                       aria-required="true" placeholder="Enter your new password" />
                                <label asp-for="Input.NewPassword" class="form-label"></label>
                                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            </div>

                            <!-- Confirm New Password -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.ConfirmPassword" class="form-control shadow-sm rounded-3" autocomplete="new-password"
                                       aria-required="true" placeholder="Confirm your new password" />
                                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <!-- Update Password Button -->
                            <button type="submit" class="w-100 btn btn-lg btn-primary rounded-3 fw-bold shadow-sm">
                                <i class="bi bi-key-fill me-2"></i> Update Password
                            </button>
                        </form>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="div2">
        <partial name="_ManageNav" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
