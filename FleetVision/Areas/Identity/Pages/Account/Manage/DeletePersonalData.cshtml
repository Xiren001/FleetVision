@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>



<div class="parent">
    <div class="div1">
        <div class="alert alert-warning d-flex align-items-center p-3 rounded-3 shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
            <p class="mb-0">
                <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
            </p>
        </div>

        <div class="card border-0 shadow-sm p-4 mt-3 rounded-3">
            <form id="delete-user" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger small" role="alert"></div>

                @if (Model.RequirePassword)
                {
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control rounded-3" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>
                }

                <button class="w-100 btn btn-danger rounded-3 fw-bold shadow-sm" type="submit">
                    <i class="bi bi-trash-fill me-2"></i> Delete Data & Close My Account
                </button>
            </form>
        </div>

    </div>
    <div class="div2"><partial name="_ManageNav" /></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
